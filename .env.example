# Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# Required: API Keys (at least one required)
# ============================================

# Google Gemini API Key (Get from: https://ai.google.dev/)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API Key (Get from: https://platform.openai.com/)
# OPENAI_API_KEY=your_openai_api_key_here


# ============================================
# Optional: Model Configuration
# ============================================

# Model to use (default: gemini-2.0-flash-exp)
# Options for Google: gemini-2.0-flash-exp, gemini-1.5-pro, gemini-1.5-flash
# Options for OpenAI: gpt-4-turbo-preview, gpt-3.5-turbo
DEFAULT_MODEL=gemini-2.0-flash-exp

# Temperature for response generation (0.0 = deterministic, 1.0 = creative)
TEMPERATURE=0.7

# Maximum tokens in response
MAX_TOKENS=2048


# ============================================
# Optional: Agent Settings
# ============================================

# Maximum iterations for agent tool calling
MAX_ITERATIONS=5

# Show verbose agent logs (True/False)
VERBOSE=True

# Maximum number of messages to keep in chat history
MAX_HISTORY_LENGTH=10


# ============================================
# Optional: Storage Settings
# ============================================

# Directory for saving output files
OUTPUT_DIR=outputs


# ============================================
# Optional: Tool Settings
# ============================================

# Wikipedia: Number of top results to fetch
WIKI_TOP_K=2

# Wikipedia: Maximum characters per result
WIKI_MAX_CHARS=1000
